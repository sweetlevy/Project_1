<h2>Login</h2>

<%= form_tag '/login' do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>

  <%= submit_tag 'Log In' %>
<% end %>
<br>
<p><%= link_to 'Back to Index', issues_path %></p>
<% if session[:current_user]%>
  <p><%= link_to "Logout", logout_path %></p>
  <p><%= link_to "Delete Your User Account", issues_path %></p>
  <% end %>
