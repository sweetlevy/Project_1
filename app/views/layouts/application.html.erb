<!DOCTYPE html>
<html>
<head>
  <title>Unprotected Landcapes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= link_to "Logout", logout_path %> |
    <%= link_to 'Delete My Account', current_user, method: :delete, data: {confirm: 'Are you sure you want to delete your account?'} %> |
  <% else %>
    <%= link_to "Login", login_path %> |
    <%= link_to "Sign Up", new_user_path %> |
  <% end %>

<%= yield %>

</body>
</html>
